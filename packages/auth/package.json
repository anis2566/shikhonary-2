        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@better-auth/cli": "^1.3.34",
        "@types/node": "^20.19.9",
        "@workspace/eslint-config": "workspace:*",
        "@workspace/typescript-config": "workspace:*",
        "eslint": "^9.32.0",
        "typescript": "^5.9.3"
